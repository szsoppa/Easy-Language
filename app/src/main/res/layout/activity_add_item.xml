<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.szymon.easylanguage.AddItemActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_primaryWord"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Plesase insert word"
        android:id="@+id/textView_insertWord"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click translate or insert your translation"
        android:id="@+id/textView_translateInfo"
        android:layout_below="@+id/editText_primaryWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:background="@color/colorAccent"
        android:textColor="#FFF"
        android:id="@+id/button_translate"
        android:layout_below="@+id/textView_translateInfo"
        android:layout_marginTop="32dp"
        android:onClick="translate"
        android:layout_alignRight="@+id/textView_insertWord"
        android:layout_alignEnd="@+id/textView_insertWord"
        android:layout_alignLeft="@+id/textView_insertWord"
        android:layout_alignStart="@+id/textView_insertWord" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_translatedWord"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/button_translate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add this word"
        android:background="@color/colorAccent"
        android:textColor="#FFF"
        android:id="@+id/button_addWord"
        android:onClick="addWord"
        android:layout_marginTop="15px"
        android:layout_below="@+id/editText_translatedWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
